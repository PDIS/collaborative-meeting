<section id="introduction">
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-md-6">
        <h2 class="mb-3"><%- __("post.introduction.title") %></h2>
        <p><%- page.introduction.content %></p>
      </div>
      <div class="col-md-5">
        <img src="<%- url_for(page.introduction.image) %>" class="w-100" />
        <% array(page.departments).forEach(d => { %>
          <%- dept(d, "fullname") %>
        <% }) %>
      </div>
    </div>
  </div>
</section>
