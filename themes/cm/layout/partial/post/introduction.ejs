<section id="introduction">
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-md-6">
        <h2 class="mb-3"><%- __("post.introduction.title") %></h2>
        <% try { page.introduction.content; %><p><%- page.introduction.content %></p><% }catch(e){} %>
      </div>
      <div class="col-md-5">
          <% try { if(page.introduction.image!=""){ %><img src="<%- url_for(page.introduction.image) %>" class="w-100 mb-3" /><% }}catch(e){} %>
        <div class="depts">
        <% 
          const depts = array(page.departments);
          depts.push("PDIS");
          depts.forEach(d => { %>
          <div class="dept-image text-center" onclick="location.href='/list/?dept=<%- dept(d, "id") %>'">
            <img src="<%- url_for(dept(d, 'image')) %>" class="w-100" />
            <span title="<%- dept(d, 'fullname') %>"><%- dept(d, "name") %></span>
          </div>
        <% }) %>
        </div>
      </div>
    </div>
  </div>
</section>
