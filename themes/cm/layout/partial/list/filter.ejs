<section id="filter">
  <div class="container">
    <div class="title">
      <h2><%- page.filter.title %></h2>
      <span><%- page.filter.content %></span>
    </div>
   
    <div class="row">
      <div class="col-12">
        <div class="search-bar">
          <input id="search-text" type="text" placeholder="<%- page.filter.search %>" autocomplete="off"/>
          <div class="search-btn" onclick="location.href='/list/?search='+document.getElementById('search-text').value">
            <i class="fas fa-search"></i>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="row filter-tag">
      <div class="col-lg-2">
        <h3><%- page.filter.tag_title %></h2>
      </div>
      <div class="col-lg-10">
        <div class="collapse" id="collapseTag">
          <div class="filter-items">
            <div class="filter-item tag" data-id="all" data-name="全部" data-active="false" onclick="click_tag(this)"></div>
            <% site.data.tags.forEach(tag => { %>
            <div class="filter-item tag" data-id="<%- tag.id %>" data-name="<%- tag[page.lang].name %>" data-active="false" onclick="click_tag(this)"></div>
            <% }) %>
          </div>
        </div>
        <a class="more" data-bs-toggle="collapse" href="#collapseTag">展開更多類型</a>
      </div>
    </div>
    <div class="row filter-dept">
      <div class="col-lg-2">
        <h3><%- page.filter.dept_title %></h2>
      </div>
      <div class="col-lg-10">
        <div class="collapse" id="collapseDept">
          <div class="filter-items">
            <div class="filter-item dept" data-id="all" data-name="全部" data-active="false" onclick="click_tag(this)"></div>
            <% site.data.departments.filter(p => p.id != "PDIS").forEach(dept => { %>
            <div class="filter-item dept" data-id="<%- dept.id %>" data-name="<%- dept[page.lang].name %>" data-active="false" data-img="<%- url_for(dept.image) %>" onclick="click_dept(this)"></div>
            <% }) %>
          </div>
        </div>
        <a class="more" data-bs-toggle="collapse" href="#collapseDept">展開更多部會</a>
      </div>
    </div>  
    <hr>
  </div>
</section>