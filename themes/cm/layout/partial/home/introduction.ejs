<section id="introduction">
  <div class="container">
    <div class="row part1">
      <div class="col-6 cover">
        <img src="<%- page.introduction.part1.image %>" />
      </div>
      <div class="col-6 d-flex align-items-center p-5">
        <div>
          <h2><%- page.introduction.title %></h2>
          <h3><%- page.introduction.part1.title %></h3>
          <p><%- page.introduction.part1.content %></p>
        </div>
      </div>
    </div>
    <div class="row part2">
      <div class="col-6 d-flex align-items-center p-5">
        <div class="text-center">
          <h3><%- page.introduction.part2.title %></h3>
          <img
            class="content-image"
            src="<%- page.introduction.part2.content_image %>"
          />
          <p class="text-start"><%- page.introduction.part2.content %></p>
        </div>
      </div>
      <div class="col-6 cover">
        <img src="<%- page.introduction.part2.image %>" />
      </div>
    </div>
    <div class="row part3">
      <div class="col-6 cover">
        <img src="<%- page.introduction.part3.image %>" />
      </div>
      <div class="col-6 d-flex align-items-center">
        <div>
          <h3><%- page.introduction.part3.title %></h3>
          <p><%- page.introduction.part3.content %></p>
        </div>
      </div>
    </div>
  </div>
</section>
