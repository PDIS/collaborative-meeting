<section id="introduction">
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-md-6">
        <h2 class="mb-3"><%- __("post.introduction.title") %></h2>
        <p><%- page.introduction.content %></p>
      </div>
      <div class="col-md-5">
        <img src="<%- page.introduction.image %>" class="w-100" />
        <% page.departments.forEach(d => { %>
          <%- dept(d, "fullname") %>
        <% }) %>
      </div>
    </div>
  </div>
</section>
