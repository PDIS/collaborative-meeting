<section id="cover">
  <div class="container">
    <h1><%- page.title %></h1>
    <p class="text-white"><%- page.description %></p>
    <% if (page.cover) { %>
    <div class="embed-iframe">
      <iframe src="<%- embed_link(page.cover, {loop : true}) %>" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <% } else { %>
      <div class="image-16-9 shadow-sm" style="background-image: url('<%- url_for(page.thumbnail) %>')"></div>
    <% } %>
  </div>
  <div class="bg bg-<%- (page.color || '').toLowerCase() %>"></div>
</section>
