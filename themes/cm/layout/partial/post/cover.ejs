<section id="cover">
  <div class="container">
    <h1><%- page.title %></h1>
    <p><%- page.description %></p>
    <% try { const link = embed_link(page.cover.link, { autoplay: true }); %>
    <div class="embed-iframe">
      <iframe
        src="<%- link %>"
      ></iframe>
    </div>
    <%  } catch(e){ %>
    <img src="<%- url_for(page.thumbnail) %>" class="w-100" />
    <% } %>
  </div>
  <div class="bg bg-<%- (page.color || '').toLowerCase() %>"></div>
</section>
